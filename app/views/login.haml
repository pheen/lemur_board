%title= "Lemur Board | Login"

%link{ href: 'assets/stylesheets/login.css', type: 'text/css', rel: 'stylesheet' }

%script{ src: 'assets/javascripts/libraries/jquery-2.1.1.js',        type: 'text/javascript' }
%script{ src: 'assets/javascripts/libraries/jquery.mobile-1.4.4.js', type: 'text/javascript' }
%script{ src: 'assets/javascripts/libraries/underscore.js',          type: 'text/javascript' }
%script{ src: 'assets/javascripts/libraries/angular.js',             type: 'text/javascript' }
%script{ src: 'assets/javascripts/libraries/angular-resource.js',    type: 'text/javascript' }
%script{ src: 'assets/javascripts/libraries/angular-sanitize.js',    type: 'text/javascript' }
%script{ src: 'assets/javascripts/angular/lemur.js',                 type: 'text/javascript' }
%script{ src: 'assets/javascripts/login.js',                         type: 'text/javascript' }

%body.swipeable{ 'ng-app' => 'lemur', 'ng-controller' => 'LoginController' }
  %h1 Login
  %form
    %label{ for: 'email' } Email:
    %input{ name: 'email', type: 'text' }
    %label{ for: 'password' } Password:
    %input{ name: 'password', type: 'password' }
    %input{ type: 'submit', value: 'Login' }
